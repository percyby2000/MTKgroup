<section id = "planes" class="py-16 px-5 text-center bg-gradient-to-br from-orange-50 via-gray-100 to-gray-200 relative overflow-hidden">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-orange-200/20 rounded-full blur-3xl -translate-y-1/2 translate-x-1/4"></div>
    <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-orange-300/20 rounded-full blur-3xl translate-y-1/2 -translate-x-1/4"></div>
    
