<script>
  // Funcionalidad de pestañas
  const tabHogar = document.getElementById('tab-hogar');
  const tabEmpresa = document.getElementById('tab-empresa');
  const panelHogar = document.getElementById('panel-hogar');
  const panelEmpresa = document.getElementById('panel-empresa');

  // Animación para mostrar/ocultar paneles
  function showPanel(panel: HTMLElement, otherPanel: HTMLElement) {
    // Ocultar el otro panel
    otherPanel.classList.add('hidden');
    
    // Mostrar el panel actual con animación
    panel.classList.remove('hidden');
    
    // Aplicar animación de entrada
    panel.style.opacity = '0';
    panel.style.transform = 'translateY(10px)';
    
    setTimeout(() => {
      panel.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
      panel.style.opacity = '1';
      panel.style.transform = 'translateY(0)';
    }, 50);
  }

  // Cambiar estilos de las pestañas
  function setActiveTab(activeTab: HTMLElement, inactiveTab: HTMLElement) {
    // Activar pestaña
    activeTab.setAttribute('aria-selected', 'true');
    activeTab.classList.remove('bg-gradient-to-r', 'from-gray-700', 'to-gray-600');
    activeTab.classList.add('bg-gradient-to-r', 'from-orange-600', 'to-orange-500');
    
    // Desactivar otra pestaña
    inactiveTab.setAttribute('aria-selected', 'false');
    inactiveTab.classList.remove('bg-gradient-to-r', 'from-orange-600', 'to-orange-500');
    inactiveTab.classList.add('bg-gradient-to-r', 'from-gray-700', 'to-gray-600');
  }

  // Event listeners
  if (tabHogar && tabEmpresa && panelHogar && panelEmpresa) {
    tabHogar.addEventListener('click', () => {
      setActiveTab(tabHogar, tabEmpresa);
      showPanel(panelHogar, panelEmpresa);
    });

    tabEmpresa.addEventListener('click', () => {
      setActiveTab(tabEmpresa, tabHogar);
      showPanel(panelEmpresa, panelHogar);
    });
  }

  // Efecto de hover para las tarjetas
  const cards = document.querySelectorAll('.grid > div');
  
  cards.forEach(card => {
    card.addEventListener('mouseenter', () => {
      const parent = card.closest('.panel');
      if (!parent) return;
      
      const siblings = parent.querySelectorAll('.grid > div');
      siblings.forEach(c => {
        if (c !== card) {
          (c as HTMLElement).style.opacity = '0.75';
          (c as HTMLElement).style.transform = 'scale(0.98)';
        }
      });
    });
    
    card.addEventListener('mouseleave', () => {
      const parent = card.closest('.panel');
      if (!parent) return;
      
      const siblings = parent.querySelectorAll('.grid > div');
      siblings.forEach(c => {
        (c as HTMLElement).style.opacity = '1';
        if (!c.classList.contains('transform')) {
          (c as HTMLElement).style.transform = 'scale(1)';
        }
      });
    });
  });
</script>