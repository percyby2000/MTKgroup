---
// Datos para el footer
const contactInfo = {
  direccion: {
    calle: "Av. República de Panamá",
    numero: "Nro. 3418 - 3420 Torre",
    distrito: "Barlovento - San Isidro"
  },
  telefonos: {
    central: "017073000",
    gratuito: "080074100 (gratuito)"
  },
  email: "contacto@mintaka.pe"
};

const redes = [
  { nombre: "Facebook", icono: "facebook", url: "https://facebook.com/mintakagroup" },
  { nombre: "Instagram", icono: "instagram", url: "https://instagram.com/mintakagroup" },
  { nombre: "YouTube", icono: "youtube", url: "https://youtube.com/mintakagroup" },
  { nombre: "LinkedIn", icono: "linkedin", url: "https://linkedin.com/company/mintakagroup" },
  { nombre: "TikTok", icono: "tiktok", url: "https://tiktok.com/@mintakagroup" }
];

const enlaces = {
  informacion: [
    { texto: "¿Cómo reclamar?", url: "/reclamos" },
    { texto: "Condiciones de Uso", url: "/condiciones-uso" },
    { texto: "Directiva de Reclamos", url: "/directiva-reclamos" },
    { texto: "Medios de pago", url: "/medios-pago" },
    { texto: "Condiciones de Uso del sitio web", url: "/condiciones-sitio" },
    { texto: "Política de uso de internet", url: "/politica-internet" },
    { texto: "Política de Cookies", url: "/politica-cookies" }
  ],
  derechos: [
    { texto: "Entérate de tus derechos", url: "/tus-derechos" },
    { texto: "Reglamento de Neutralidad", url: "/reglamento-neutralidad" },
    { texto: "Política de Privacidad en Redes Sociales", url: "/privacidad-redes" },
    { texto: "Política de Privacidad del Sitio Web", url: "/privacidad-web" },
    { texto: "Devolución por interrupciones", url: "/devoluciones" },
    { texto: "Canal de denuncias", url: "/denuncias" }
  ],
  institucional: [
    { texto: "Trabaja con nosotros", url: "/trabaja-con-nosotros" }
  ]
};
---

<footer class="bg-black text-white py-10">
  <div class="container mx-auto px-4 md:px-6">
    <!-- Logo y redes sociales -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-10">
      <div class="mb-6 md:mb-0">
        <img src="/headerlogo.png" alt="Logo Mintaka" class="h-16 w-auto" />
      </div>
      
      <div class="flex gap-3">
        {redes.map(red => (
          <a 
            href={red.url} 
            target="_blank" 
            rel="noopener noreferrer" 
            class="w-10 h-10 rounded-full border border-white/20 flex items-center justify-center hover:bg-white/10 transition-colors"
            aria-label={red.nombre}
          >
            {red.icono === "facebook" && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M9.198 21.5h4v-8.01h3.604l.396-3.98h-4V7.5a1 1 0 0 1 1-1h3v-4h-3a5 5 0 0 0-5 5v2.01h-2l-.396 3.98h2.396v8.01Z" />
              </svg>
            )}
            
            {red.icono === "instagram" && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 0 1 1.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 0 1-1.153 1.772 4.915 4.915 0 0 1-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 0 1-1.772-1.153 4.904 4.904 0 0 1-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 0 1 1.153-1.772A4.897 4.897 0 0 1 5.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 1.802c-2.67 0-2.986.01-4.04.059-.976.045-1.505.207-1.858.344-.466.182-.8.398-1.15.748-.35.35-.566.684-.748 1.15-.137.353-.3.882-.344 1.857-.048 1.055-.058 1.37-.058 4.041 0 2.67.01 2.986.058 4.04.045.977.207 1.505.344 1.858.182.466.399.8.748 1.15.35.35.684.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058 2.67 0 2.987-.01 4.04-.058.977-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.684.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041 0-2.67-.01-2.986-.058-4.04-.045-.977-.207-1.505-.344-1.858a3.097 3.097 0 0 0-.748-1.15 3.098 3.098 0 0 0-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.055-.048-1.37-.058-4.041-.058zm0 3.063a5.135 5.135 0 1 1 0 10.27 5.135 5.135 0 0 1 0-10.27zm0 8.468a3.333 3.333 0 1 0 0-6.666 3.333 3.333 0 0 0 0 6.666zm6.538-8.671a1.2 1.2 0 1 1-2.4 0 1.2 1.2 0 0 1 2.4 0z" />
              </svg>
            )}
            
            {red.icono === "youtube" && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
              </svg>
            )}
            
            {red.icono === "linkedin" && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M6.5 21.5h-5v-13h5v13zM4 6.5C2.5 6.5 1.5 5.3 1.5 4s1-2.4 2.5-2.4c1.6 0 2.5 1 2.6 2.5 0 1.4-1 2.5-2.6 2.5zm11.5 6c-1 0-2 1-2 2v7h-5v-13h5V10s1.6-1.5 4-1.5c3 0 5 2.2 5 6.3v6.7h-5v-7c0-1-1-2-2-2z" />
              </svg>
            )}
            
            {red.icono === "tiktok" && (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
                <path d="M16.6 5.82s.51.5 0 0A4.278 4.278 0 0 1 15.54 3h-3.09v12.4a2.592 2.592 0 0 1-2.59 2.5c-1.42 0-2.6-1.16-2.6-2.6 0-1.72 1.6-3.1 3.3-2.6v-3.1c-3.45-.46-6.6 2.14-6.6 5.5 0 3.02 2.3 5.5 5.5 5.5 3.2 0 5.8-2.5 5.8-5.5V9.51c1.5 1.1 3.2 1.8 5.1 1.8v-3.1c-1.45 0-2.8-.51-3.85-1.4z" />
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>
    
    <!-- Columnas de enlaces -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Columna 1: Información -->
      <div>
        <h3 class="text-lg font-medium mb-4">Información de abonados y usuarios</h3>
        <ul class="space-y-2">
          {enlaces.informacion.map(link => (
            <li>
              <a href={link.url} class="flex items-center text-white/80 hover:text-white text-sm">
                <span class="text-orange-500 mr-2">•</span>
                {link.texto}
              </a>
            </li>
          ))}
        </ul>
        
        <div class="mt-6">
          <h4 class="font-medium mb-2">Atención de Reclamos y Solicitudes en Línea</h4>
        </div>
        
        <div class="mt-4">
          <h4 class="font-medium mb-2">De utilidad</h4>
        </div>
      </div>
      
      <!-- Columna 2: Tus derechos -->
      <div>
        <h3 class="text-lg font-medium mb-4">Tus derechos</h3>
        <ul class="space-y-2">
          {enlaces.derechos.map(link => (
            <li>
              <a href={link.url} class="flex items-center text-white/80 hover:text-white text-sm">
                <span class="text-orange-500 mr-2">•</span>
                {link.texto}
              </a>
            </li>
          ))}
        </ul>
        
        <div class="mt-6">
          <h4 class="font-medium mb-2">Institucional</h4>
          <ul class="space-y-2">
            {enlaces.institucional.map(link => (
              <li>
                <a href={link.url} class="flex items-center text-white/80 hover:text-white text-sm">
                  <span class="text-orange-500 mr-2">•</span>
                  {link.texto}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Columna 3: Dirección fiscal -->
      <div>
        <h3 class="text-lg font-medium mb-4">Dirección fiscal</h3>
        <p class="text-white/80 text-sm mb-1">{contactInfo.direccion.calle}</p>
        <p class="text-white/80 text-sm mb-1">{contactInfo.direccion.numero}</p>
        <p class="text-white/80 text-sm">{contactInfo.direccion.distrito}</p>
        
        <div class="mt-6">
          <h4 class="font-medium mb-2">Central</h4>
          <p class="text-white/80 text-sm">{contactInfo.telefonos.central}</p>
          <p class="text-white/80 text-sm">{contactInfo.telefonos.gratuito}</p>
        </div>
        
        <div class="mt-6">
          <h4 class="font-medium mb-2">Email</h4>
          <a href={`mailto:${contactInfo.email}`} class="text-white/80 hover:text-white text-sm">
            {contactInfo.email}
          </a>
        </div>
      </div>
      
      <!-- Columna 4: Mapa o formulario -->
      <div>
        <div class="bg-white/5 rounded-lg p-4 h-full">
          <h3 class="text-lg font-medium mb-4">Contáctanos</h3>
          <form class="space-y-3">
            <div>
              <input type="text" placeholder="Nombre" class="w-full bg-white/10 rounded px-3 py-2 text-sm border border-white/10 focus:outline-none focus:border-orange-500" />
            </div>
            <div>
              <input type="email" placeholder="Email" class="w-full bg-white/10 rounded px-3 py-2 text-sm border border-white/10 focus:outline-none focus:border-orange-500" />
            </div>
            <div>
              <textarea placeholder="Mensaje" rows="3" class="w-full bg-white/10 rounded px-3 py-2 text-sm border border-white/10 focus:outline-none focus:border-orange-500"></textarea>
            </div>
            <div>
              <button type="submit" class="w-full bg-orange-500 hover:bg-orange-600 text-white font-medium py-2 px-4 rounded text-sm transition-colors">
                Enviar mensaje
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <!-- Línea divisoria -->
    <div class="border-t border-white/10 my-8"></div>
    
    <!-- Derechos de autor -->
    <div class="text-center text-white/60 text-sm">
      <p>&copy; {new Date().getFullYear()} Mintaka Group. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>