<style>
    /* Header principal */
    .header {
        background: white;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(10px);
        border-bottom: 1px solid #f0f0f0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .logo-img {
        height: 50px;
        width: auto;
        transition: all 0.3s ease;
    }

    .logo-img:hover {
        transform: scale(1.05);
    }

    /* Navegación desktop */
    .nav {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .nav-link {
        color: #333;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
        letter-spacing: 0.5px;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .nav-link:hover {
        background: linear-gradient(135deg, #ff6b35, #f7931e);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 107, 53, 0.3);
    }

    /* Menú hamburguesa */
    .menu-toggle {
        display: none;
        flex-direction: column;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.5rem;
        gap: 4px;
    }

    .hamburger {
        width: 25px;
        height: 3px;
        background: #ff6b35;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    .menu-toggle.active .hamburger:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
        background: white;
    }

    .menu-toggle.active .hamburger:nth-child(2) {
        opacity: 0;
    }

    .menu-toggle.active .hamburger:nth-child(3) {
        transform: rotate(-45deg) translate(7px, -6px);
        background: white;
    }

    /* Overlay del menú móvil pantalla completa */
    .mobile-menu-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: #f5f5f5;
        z-index: 9999;
        transform: translateY(-100%);
        transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow-y: auto;
    }

    .mobile-menu-overlay.active {
        transform: translateY(0);
    }

    .mobile-menu-fullscreen {
        height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Top bar con botón de cierre */
    .mobile-top-bar {
        background: #2d3748;
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        position: relative;
    }

    .close-btn {
        background: transparent;
        border: 2px solid #ddd;
        color: #666;
        cursor: pointer;
        padding: 8px;
        border-radius: 50%;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
    }

    .close-btn:hover {
        background: #f5f5f5;
        border-color: #999;
        color: #333;
        transform: translateY(-50%) rotate(90deg) scale(1.05);
    }

    .close-btn svg {
        stroke-width: 2.5;
        width: 18px;
        height: 18px;
    }

    /* Logo en menú móvil */
    .mobile-logo-section {
        padding: 30px 20px;
        background: #f8f9fa;
        border-bottom: 1px solid #e9ecef;
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .logo-content {
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        flex: 1;
    }

    .mobile-logo-section .logo-img {
        height: 60px;
        width: auto;
        max-width: 200px;
        object-fit: contain;
    }

    .mobile-logo-section .logo-text {
        font-size: 24px;
        font-weight: 800;
        color: #000000;
        margin: 0;
    }

    .mobile-logo-section .logo-subtext {
        font-size: 10px;
        color: #ff4400;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        font-weight: 500;
        margin: 2px 0 0 0;
    }

    /* Navegación principal móvil */
    .mobile-main-nav {
        flex: 1;
        padding: 30px 20px;
        display: flex;
        flex-direction: column;
        gap: 0;
        background: white;
    }

    .mobile-nav-item {
        padding: 20px 0;
        background: transparent;
        text-decoration: none;
        color: #666;
        font-weight: 500;
        font-size: 16px;
        transition: all 0.3s ease;
        border: none;
        border-bottom: 1px solid #f0f0f0;
        display: block;
        text-align: left;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .mobile-nav-item:hover {
        background: transparent;
        color: #ff6b35;
        padding-left: 10px;
    }

    .mobile-nav-item.active {
        background: transparent;
        color: #ff6b35;
        font-weight: 600;
    }

    .mobile-nav-item:last-child {
        border-bottom: none;
    }

    /* Sección inferior */
    .mobile-bottom-section {
        background: #000000;
        color: white;
        padding: 25px 20px 30px 20px;
        min-height: 320px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* Preview del contenido */
    .mobile-content-preview {
        text-align: center;
        margin-bottom: 30px;
        padding: 0 20px;
    }

    .preview-card h3 {
        font-size: 22px;
        font-weight: 700;
        margin-bottom: 12px;
        color: white;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .preview-card p {
        font-size: 14px;
        margin-bottom: 25px;
        color: rgba(255, 255, 255, 0.9);
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: 400;
    }

    .preview-btn {
        background: transparent;
        color: white;
        border: 2px solid white;
        padding: 14px 35px;
        border-radius: 30px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        font-size: 13px;
        letter-spacing: 0.5px;
        display: inline-block;
    }

    .preview-btn:hover {
        background: white;
        color: #333;
        transform: scale(1.05);
    }

    /* Redes sociales */
    .mobile-social-media {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
        padding: 0 20px 20px 20px;
    }

    .social-icon {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        transition: all 0.3s ease;
        border: 2px solid rgba(255, 255, 255, 0.3);
        background: rgba(255, 255, 255, 0.1);
    }

    .social-icon svg {
        width: 24px;
        height: 24px;
    }

    .social-icon:hover {
        transform: scale(1.1);
        border-color: white;
        background: rgba(255, 255, 255, 0.2);
    }

    .facebook:hover {
        background: #1877f2;
        border-color: #1877f2;
    }

    .instagram:hover {
        background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
        border-color: transparent;
    }

    .twitter:hover {
        background: #000000;
        border-color: #01080b;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .container {
            padding: 1rem;
        }

        .logo-img {
            height: 45px;
        }

        .menu-toggle {
            display: flex;
        }

        .nav {
            display: none;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 0.75rem 1rem;
        }

        .logo-img {
            height: 40px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const menuToggle = document.getElementById('menuToggle') as HTMLButtonElement;
        const mobileMenuOverlay = document.getElementById('mobileMenuOverlay') as HTMLElement;
        const closeMenuBtn = document.getElementById('closeMenuBtn') as HTMLButtonElement;
        const body = document.body;

        // Abrir menú móvil
        menuToggle?.addEventListener('click', function() {
            menuToggle.classList.add('active');
            mobileMenuOverlay.classList.add('active');
            body.style.overflow = 'hidden';
        });

        // Cerrar menú con botón X
        closeMenuBtn?.addEventListener('click', function() {
            closeMenu();
        });

        // Cerrar menú al tocar enlaces de navegación
        document.querySelectorAll('.mobile-nav-item').forEach(link => {
            link.addEventListener('click', function() {
                closeMenu();
            });
        });

        // Función para cerrar menú
        function closeMenu() {
            menuToggle?.classList.remove('active');
            mobileMenuOverlay?.classList.remove('active');
            body.style.overflow = '';
        }

        // Cerrar con tecla Escape
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && mobileMenuOverlay?.classList.contains('active')) {
                closeMenu();
            }
        });

        // Animación de entrada de elementos
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting && entry.target instanceof HTMLElement) {
                    entry.target.style.animation = 'slideInFromBottom 0.6s ease forwards';
                }
            });
        });

        // Observar elementos del menú móvil
        document.querySelectorAll('.mobile-nav-item').forEach(item => {
            observer.observe(item);
        });

        // Agregar estilos de animación
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideInFromBottom {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            
            .mobile-nav-item {
                opacity: 0;
                transform: translateY(30px);
            }
        `;
        document.head.appendChild(style);
    });
</script>