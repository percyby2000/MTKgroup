---
// Datos de la empresa
const empresa = {
  nombre: "Mintaka Group",
  fundacion: "2017",
  velocidadMax: "1000 Mbps",
  servicios: ["Internet fibra óptica (FTTH)", "telefonía fija", "televisión digital"],
  mision: "Desafiamos lo convencional, garantizando la mejor experiencia digital para el bienestar de nuestros clientes, con un crecimiento sostenible y eficiente.",
  vision: "Triplicar el valor de la compañía al 2027, logrando ser la empresa de telecomunicaciones más valorada por nuestros clientes y nuestra gente, contribuyendo al desarrollo del país.",
  valores: [
    { nombre: "Innovación", descripcion: "Buscamos constantemente nuevas soluciones", icono: "lightbulb" },
    { nombre: "Compromiso", descripcion: "Nos dedicamos a ofrecer el mejor servicio", icono: "handshake" },
    { nombre: "Excelencia", descripcion: "Trabajamos para superar expectativas", icono: "star" },
    { nombre: "Integridad", descripcion: "Actuamos con honestidad y transparencia", icono: "shield" }
  ]
};

// Función para seleccionar el icono adecuado
const getIconSvg = (iconName: string) => {
  const icons: Record<string, string> = {
    lightbulb: '<path d="M10 2a6 6 0 00-6 6c0 1.887.87 3.564 2.228 4.674.672.532 1.43.99 2.257 1.169.37.07.6.246.515.602-.138.465-.247.926-.405 1.546A.757.757 0 009.42 17h1.16c.342 0 .652-.226.747-.566.157-.62.266-1.08.404-1.546.085-.356.145-.53.515-.602.828-.18 1.585-.637 2.257-1.17A5.978 5.978 0 0016 8a6 6 0 00-6-6zm0 2a4 4 0 110 8 4 4 0 010-8zm0 9c1.105 0 2 .895 2 2H8c0-1.105.895-2 2-2z"/>',
    handshake: '<path d="M3.979 7.89l-2.76 2.76c-.292.293-.292.767 0 1.06l3.98 3.98 1.06-1.06-3.98-3.98 2.76-2.76.894.893a.5.5 0 00.707 0l1.344-1.344a.5.5 0 000-.707L6.44 5.182a.5.5 0 00-.707 0L4.39 6.526a.5.5 0 000 .707l-.411.657zm12.042 0l-4.15 4.15 1.06 1.06 4.15-4.15-1.06-1.06zm-3-3l-4.15 4.15 1.06 1.06 4.15-4.15-1.06-1.06zM5.6 16.4L8 14l-1.4-1.4-2.4 2.4 1.4 1.4z"/>',
    star: '<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>',
    shield: '<path d="M9 14.66V3.34l4.95 2.48A7.972 7.972 0 0110 13a7.972 7.972 0 013.95 6.88L10 14.66l-4.95 2.48A7.972 7.972 0 019 10a7.972 7.972 0 01-4.95-6.68L9 5.8V14.66z"/>'
  };
  return icons[iconName] || icons.star;
};
---

<section class="nosotros-section overflow-hidden">
  <!-- Quiénes somos -->
  <div class="quienes-somos text-white py-8 md:py-12 relative">
    <!-- Elementos decorativos de fondo -->
    <div class="absolute -top-20 right-0 w-20 h-20 bg-orange-500 rounded-full opacity-20 blur-xl"></div>
    <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-orange-600 rounded-full opacity-20 blur-3xl"></div>
    <div class="container mx-auto px-4 flex flex-col md:flex-row items-center">
      <div class="md:w-1/2 mb-6 md:mb-0">
        <h2 class="text-2xl md:text-3xl font-bold mb-3 tracking-tight">¿QUIÉNES SOMOS?</h2>
        <p class="text-sm md:text-base leading-relaxed md:pr-4 opacity-95">
          Somos una empresa de telecomunicaciones peruana que desde el {empresa.fundacion} tiene como principal compromiso brindar un servicio de calidad a la comunidad Winner, con una conexión a internet hogar <span class="font-bold">100% fibra óptica (FTTH)</span> con velocidades de hasta <span class="font-bold">{empresa.velocidadMax}</span>, servicio de {empresa.servicios.join(' y ')}.
        </p>
      </div>
      <div class="md:w-1/2 relative flex justify-center">
        <img 
          src="/imgaboud.png" 
          alt="Personas utilizando servicios de Mintaka" 
          class="w-25 h-29 max-h-[390px] object-contain relative z-30"
        />
      </div>
    </div>
    
    <!-- Patrón decorativo -->
    <div class="absolute bottom-0 left-0 right-0 h-8">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="w-full h-full">
        <path fill="#ffffff" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,133.3C672,139,768,181,864,186.7C960,192,1056,160,1152,133.3C1248,107,1344,85,1392,74.7L1440,64L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
      </svg>
    </div>
  </div>
  
  <!-- Propósito -->
  <div class="proposito py-8 md:py-10 bg-white relative">
    <div class="container mx-auto px-4 text-center">
      <div class="inline-block bg-naranja text-white px-5 py-2 rounded-lg mb-5 shadow-sm">
        <h3 class="text-lg md:text-xl font-bold">NUESTRO PROPÓSITO</h3>
      </div>
      
      <h2 class="text-xl md:text-3xl font-bold text-gray-800 mb-8">
        CONECTAMOS PERSONAS <span class="text-naranja">AL MUNDO.</span>
      </h2>
      
      <!-- Misión y Visión -->
      <div class="flex flex-col md:flex-row justify-between items-center relative">
        <!-- Línea de conexión -->
        <div class="hidden md:block absolute top-1/2 left-1/4 right-1/4 h-1 bg-gradient-to-r from-naranja via-orange-400 to-naranja transform -translate-y-1/2 z-0 rounded-full"></div>
        
        <!-- Ícono central -->
        <div class="hidden md:flex absolute left-1/2 top-1/2 transform -translate-x-1/2 -translate-y-1/2 z-10 w-12 h-12 bg-white rounded-full items-center justify-center shadow border-2 border-orange-100">
          <div class="w-8 h-8 bg-gradient-to-br from-yellow-100 to-yellow-200 rounded-full flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-naranja" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
        
        <!-- Misión -->
        <div class="md:w-5/12 mb-8 md:mb-0 p-4 bg-gradient-to-br from-white to-orange-50 rounded-xl shadow-sm">
          <div class="w-12 h-12 bg-gradient-to-br from-orange-100 to-orange-200 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-naranja" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-bold text-naranja mb-3">MISIÓN</h3>
          <p class="text-gray-700 text-xs md:text-sm">
            {empresa.mision}
          </p>
        </div>
        
        <!-- Espacio central para móvil -->
        <div class="md:w-2/12 mb-8 md:mb-0 flex md:hidden justify-center">
          <div class="w-10 h-10 bg-gradient-to-br from-yellow-100 to-yellow-200 rounded-full flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-naranja" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
        
        <!-- Visión -->
        <div class="md:w-5/12 p-4 bg-gradient-to-br from-white to-orange-50 rounded-xl shadow-sm">
          <div class="w-12 h-12 bg-gradient-to-br from-orange-100 to-orange-200 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-naranja" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-xl md:text-2xl font-bold text-naranja mb-3">VISIÓN</h3>
          <p class="text-gray-700 text-xs md:text-sm">
            {empresa.vision}
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Valores -->
  <div class="valores py-8 bg-gray-50 relative">
    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="inline-block bg-naranja text-white px-5 py-2 rounded-lg mb-6 shadow-sm">
        <h3 class="text-lg md:text-xl font-bold">NUESTROS VALORES</h3>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {empresa.valores.map(valor => (
          <div class="bg-white rounded-lg shadow p-4 transform transition duration-300 hover:scale-105 hover:shadow-md border border-orange-100">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-orange-100 to-orange-200 mx-auto mb-3 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-naranja" viewBox="0 0 20 20" fill="currentColor">
                <Fragment set:html={getIconSvg(valor.icono)} />
              </svg>
            </div>
            <h4 class="text-base font-bold text-gray-800 mb-1">{valor.nombre}</h4>
            <p class="text-gray-600 text-xs">{valor.descripcion}</p>
          </div>
        ))}
      </div>
      
      <!-- Botón de contacto -->
      <div class="mt-8">
        <a href="/contacto" class="inline-flex items-center px-5 py-2 bg-naranja text-white font-medium rounded-full shadow-sm hover:shadow transform hover:-translate-y-1 transition-all duration-300 text-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
          </svg>
          Contáctanos
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .nosotros-section {
    font-family: 'Poppins', sans-serif;
  }
    
    .quienes-somos {
    background: linear-gradient(135deg, #d45f06, #fc5a0a);
     /* Color naranja exacto de la imagen */
    }

    .mobile-nav-item:hover {
    background: transparent;
    color: #f3541a;
    padding-left: 10px;
    }

    .mobile-nav-item.active {
    background: transparent;
    color: #e13c00;
    font-weight: 600;
    }
    
  .text-naranja {
    color: #e8592d;
  }
  
  .bg-naranja {
    background-color: #d74e13;
  }
  
  .quienes-somos::before {
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7z' fill='%23ffffff' fill-opacity='0.05' fill-rule='evenodd'/%3E%3C/svg%3E");
    opacity: 0.15;
    z-index: 0;
  }

  /* Media queries para ajustes móviles */
  @media (max-width: 768px) {
    .valores .grid {
      gap: 1rem;
    }
    
    .valores .grid > div {
      padding: 1rem;
    }
  }
</style>